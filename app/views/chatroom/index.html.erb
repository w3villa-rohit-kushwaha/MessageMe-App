<div class="mt-5">
  <div class="d-flex justify-content-center text-center align-items-center icon rounded-circle border">
    <i class="fa-solid fa-5x fa-mug-saucer"></i>
  </div>
  <div class="text-center mt-1">
    <h4>Say Something</h4>
  </div>
</div>

<div class="container-fluid mt-5">
  <div class="row">
    <div class="col-md-9">
      <div class="card message-card">
        <div class="card-body">
          <!-- Message Box -->
          <div class="message-box">
            <h5 class="card-title">Message Box</h5>
            <div id="message_container">
              <!-- Messages will be displayed here -->
              <%= render @messages %>
            </div>


          </div>
          <!-- End of Message Box -->
        </div>
      </div>
      <%= form_for(@message, url: messages_path, remote: true) do |form| %>
      <div class="input-group">
        <%= form.text_field :body, class: "form-control" %>
        <div class="input-group-append">
          <%= form.submit "Send", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
    </div>

    <div class="col-md-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Active Users</h5>
          <div class="active-users">
            <!-- Active users will be displayed here -->
          </div>
          <h5 class="card-title mt-4">Remaining Users</h5>
          <div class="remaining-users">
            <!-- Remaining users will be displayed here -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
